<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Swap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/light_purple</item>
        <!--<item name="android:background">@color/bg</item>-->
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Swap.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.Swap.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Swap.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Swap.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Swap.Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/holo_blue</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Swap.Button.Purple" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Swap.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">80dp</item>
        <item name="android:borderlessButtonStyle">@color/white</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_animator
        </item>
    </style>

    <style name="Widget.Swap.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Widget.Swap.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Swap</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Swap.Toolbar</item>
    </style>

    <style name="TextAppearance.Swap.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Swap.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Swap.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>